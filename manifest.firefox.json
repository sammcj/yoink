{
  "manifest_version": 3,
  "name": "Yoink - Design Token & Style Extractor",
  "version": "1.0.1",
  "description": "Extract design tokens, colors, fonts, spacing, and styles from any website and export clean YAML for design systems and AI tools.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yoink@example.com",
      "strict_min_version": "109.0"
    }
  }
}
